<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapActivity">

        <fragment android:id="@+id/map_fragment"
            android:name="ru.dublgis.dgismobile.mapsdk.MapFragment"
            android:layout_width="match_parent"
            xmlns:android="http://schemas.android.com/apk/res/android"  android:layout_height="match_parent"/>

        <Button
            android:id="@+id/go_button"
            android:layout_width="140dp"
            android:layout_height="44dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="450dp"
            android:background="@drawable/background"
            android:elevation="2dp"

            android:text="@string/go_go_go"
            android:colorForeground="@color/black"
            android:textColor="@color/black"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <Button
            android:id="@+id/finish_button"
            android:layout_width="140dp"
            android:layout_height="44dp"
            android:layout_marginEnd="100dp"
            android:layout_marginTop="460dp"
            android:background="@drawable/background"
            android:elevation="2dp"

            android:text="@string/finished"
            android:colorForeground="@color/black"
            android:textColor="@color/black"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <Button
            android:id="@+id/out"
            android:layout_width="55dp"
            android:layout_height="44dp"
            android:layout_marginRight="290dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background"
            android:elevation="2dp"
            android:text="X"
            android:colorForeground="@color/black"
            android:textColor="@color/black"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.drawerlayout.widget.DrawerLayout>